<Window x:Class="DemoAgainAndAgain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoAgainAndAgain"
        mc:Ignorable="d"
        Title="Вход" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Войти как клиент" Name="clientButton" Grid.Row="0" Click="clientButton_Click"/>
        <Button Content="Я админ!" Grid.Row="1" Name="adminButton" Click="adminButton_Click"/>
        <Label Content="Код" Visibility="Hidden" Grid.Row="2" Name="codeLabel"/>
        <TextBox Name="codeTextBox" Grid.Row="3" Visibility="Hidden"/>
        <Button Name="enterButton" Grid.Row="4" Visibility="Hidden" Click="enterButton_Click"/>
    </Grid>
</Window>
